# top-most EditorConfig file
root = true

# rules for all files
# we use tabs with indent size 4
[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{yml,yaml,json}]
indent_size = 2
tab_width = 2

[*.sln]
indent_style = tab

[*.cs]
dotnet_diagnostic.IDE0005.severity = warning
