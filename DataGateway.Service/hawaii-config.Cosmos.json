{
  "$schema": "../schemas/hawaii.draft-01.schema.json",
  "data-source": {
    "database-type": "cosmos",
    "connection-string": "AccountEndpoint=https://dab-cosmos-demo.documents.azure.com:443/;AccountKey=zikw2Tnc1OKUROROaquZ1RwuWUzO2Bjlfd9b7RMMVTpJ3WZuiDroGNUiwOo0snA35tchpiSt5aisnNygQbcLFw==;"
  },
  "cosmos": {
    "database": "PlaygroundDB",
    "schema": "schema.gql"
  },
  "runtime": {
    "rest": {
      "enabled": false
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "mode": "development",
      "cors": {
        "origins": [ "http://localhost:5000" ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Author": {
      "source": "PlaygroundDB.authors",
      "rest": false,
      "graphql": true,
      "permissions": [
        {
          "role": "anonymous",
          "actions": [ "create", "read", "update", "delete" ]
        }
      ]
    },
    "Book": {
      "source": "PlaygroundDB.books",
      "rest": false,
      "graphql": true,
      "permissions": [
        {
          "role": "anonymous",
          "actions": [ "create", "read", "update", "delete" ]
        }
      ]
    }
  }
}
