{
  "$schema": "D:/projects/hawaii-cli/dev-test.json",
  "data-source": {
    "database-type": "mysql",
    "connection-string": "sadasdasdas"
  },
  "entities": {
    "todo": {
      "source": "s001.todo",
      "rest": {
        "route": "/todo"
      },
      "graphQL": {
        "type": {
          "singular": "todo",
          "plural": "todos"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "create",
              "fields": {
                "include": [
                  "id",
                  "tool"
                ],
                "exclude": [
                  "box_id",
                  "place"
                ]
              }
            },
            {
              "action": "read",
              "fields": {
                "include": [
                  "id",
                  "tool"
                ],
                "exclude": [
                  "box_id",
                  "place"
                ]
              }
            },
            {
              "action": "update",
              "fields": {
                "include": [
                  "content",
                  "rating"
                ]
              }
            },
            {
              "action": "delete",
              "fields": {
                "include": [
                  "id",
                  "tool"
                ],
                "exclude": [
                  "box_id",
                  "place"
                ]
              }
            }
          ]
        }
      ]
    },
    "category": {
      "source": "s001.category",
      "rest": {
        "route": "/category"
      },
      "graphQL": {
        "type": {
          "singular": "category",
          "plural": "categories"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*",
              "fields": {
                "include": [
                  "rating"
                ]
              }
            }
          ]
        }
      ]
    },
    "books": {
      "source": "s001.books",
      "rest": {
        "route": "/books"
      },
      "graphQL": {
        "type": {
          "singular": "book",
          "plural": "books"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "create",
              "fields": {
                "include": [
                  "id",
                  "rating"
                ]
              }
            },
            {
              "action": "read",
              "fields": {
                "include": [
                  "id",
                  "rating"
                ]
              }
            },
            {
              "action": "update",
              "fields": {
                "exclude": [
                  "id",
                  "content",
                  "rating"
                ]
              }
            },
            {
              "action": "delete",
              "fields": {
                "include": [
                  "id",
                  "rating"
                ]
              }
            }
          ]
        }
      ]
    }
  }
}