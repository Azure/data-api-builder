{
  "$schema": "D:/projects/hawaii-cli/todo-001.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "localhost:5001"
  },
  "entities": {
    "todo": {
      "source": "s001.todo",
      "rest": {
        "route": "/todo"
      },
      "graphQL": {
        "type": {
          "singular": "todo",
          "plural": "todos"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    },
    "books": {
      "source": "s001.books",
      "relationships": {
        "reviews": {
          "cardinality": "many",
          "target.entity": "reviews",
          "source.fields": [ "book_id" ],
          "target.fields": [ "id"]
        }
      },
      "rest": {
        "route": "/books"
      },
      "graphQL": {
        "type": {
          "singular": "book",
          "plural": "books"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "create",
              "fields": {
                "include": [
                  "id",
                  "type",
                  "review"
                ]
              }
            },
            {
              "action": "read",
              "fields": {
                "include": [
                  "id",
                  "type",
                  "review"
                ]
              }
            },
            {
              "action": "update",
              "fields": {
                "include": [
                  "id",
                  "type",
                  "review"
                ]
              }
            }
          ]
        }
      ]
    },
    "review": {
      "source": "s001.review",
      "relationships": {
        "books": {
          "cardinality": "one",
          "target.entity": "books",
          "source.fields": [ "id" ],
          "target.fields": [ "book_id"]
        }
      },
      "rest": {
        "route": "/review"
      },
      "graphQL": {
        "type": {
          "singular": "review",
          "plural": "reviews"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "update",
              "fields": {
                "exclude": [
                  "id",
                  "time"
                ]
              }
            }
          ]
        },
        {
          "role": "authenticate",
          "actions": [
            {
              "action": "create",
              "fields": {
                "include": [
                  "content",
                  "rating"
                ]
              }
            }
          ]
        }
      ]
    }
  }
}