{
  "$schema": "../../schemas/hawaii.draft-01.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "Server=localhost;Database=HawaiiTest;User ID=sa;Password=Passw0rd!;TrustServerCertificate=true"
  },
  "runtime": {
    "host": {
      "mode": "development",
      "authentication": {
        "provider": "EasyAuth"
      }
    },
    "rest": {
      "enabled": true
    },
    "graphql": {
      "enabled": true
    }
  },
  "entities": {
    "book": {
      "source": "dbo.books",
      "relationships": {
        "category": {
          "cardinality": "one",
          "target.entity": "category"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    },
    "category": {
      "source": "dbo.categories",
      "relationships": {
        "book": {
          "cardinality": "many",
          "target.entity": "book"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    },
    "authors": {
      "source": "dbo.authors",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*",
              "fields": {
                "exclude": [ "full_name" ]
              }
            }
          ]
        }
      ]
    }
  }
}
