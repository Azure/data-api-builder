{
  "$schema": "../../schemas/hawaii.draft-01.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "Server=localhost;Database=HawaiiTest;User ID=sa;Password=Passw0rd!;TrustServerCertificate=true"
  },
  "runtime": {
    "host": {
      "mode": "development",
      "authentication": {
        "provider": "EasyAuth"
      }
    }
  },
  "entities": {
    "book": {
      "source": "dbo.books",
      "relationships": {
        "category": {
          "cardinality": "one",
          "target.entity": "category"
        },
        "bookAuthors": {
          "cardinality": "many",
          "target.entity": "bookAuthor"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    },
    "category": {
      "source": "dbo.categories",
      "relationships": {
        "book": {
          "cardinality": "many",
          "target.entity": "book"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    },
    "author": {
      "source": "dbo.authors",
      "relationships": {
        "bookAuthor": {
          "cardinality": "many",
          "target.entity": "bookAuthor"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*",
              "fields": {
                "exclude": [ "full_name" ]
              }
            }
          ]
        }
      ]
    },
    "bookAuthor": {
      "source": "dbo.books_authors",
      "relationships": {
        "book": {
          "cardinality": "one",
          "target.entity": "book"
        },
        "author": {
          "cardinality": "one",
          "target.entity": "author"
        }
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [ "*" ]
        }
      ]
    }
  }
}
