<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Cli</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dab</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <BaseOutputPath>..\..\out\cli</BaseOutputPath>
    <RuntimeIdentifiers>win-x64;linux-x64;osx-x64</RuntimeIdentifiers>
    <AssemblyName>dab</AssemblyName>
    <PackageDescription>Data API Builder</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="$(CommandLineParserVersion)" />
    <PackageReference Include="Humanizer.Core" Version="$(HumanizerVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Service\Azure.DataApiBuilder.Service.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ConfigFiles Include="dab-config*.json" />
  </ItemGroup>

