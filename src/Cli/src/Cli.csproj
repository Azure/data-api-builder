<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Cli</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dab</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <BaseOutputPath>..\..\out\cli</BaseOutputPath>
    <RuntimeIdentifiers>win-x64;linux-x64;osx-x64</RuntimeIdentifiers>
    <AssemblyName>dab</AssemblyName>
    <PackageDescription>Data API Builder</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="$(CommandLineParserVersion)" />
    <PackageReference Include="Humanizer.Core" Version="$(HumanizerVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Service\Azure.DataApiBuilder.Service.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ConfigFiles Include="dab-config*.json" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">

    <PropertyGroup>
      <DllFilePath>$(BaseOutputPath)$(Configuration)\$(TargetFramework)\dab.dll</DllFilePath>
    </PropertyGroup>

    <ReadLinesFromFile File="..\..\..\MsSqlCommands.txt">
      <Output TaskParameter="Lines" ItemName="MsSqlCommands" />
    </ReadLinesFromFile>

    <ReadLinesFromFile File="..\..\..\MySqlCommands.txt">
      <Output TaskParameter="Lines" ItemName="MySqlCommands" />
    </ReadLinesFromFile>

    <ReadLinesFromFile File="..\..\..\PostgreSqlCommands.txt">
      <Output TaskParameter="Lines" ItemName="PostgreSqlCommands" />
    </ReadLinesFromFile>

    <ReadLinesFromFile File="..\..\..\CosmosCommands.txt">
      <Output TaskParameter="Lines" ItemName="CosmosCommands" />
    </ReadLinesFromFile>

    <Delete Files="@(ConfigFiles)" />

    <Exec Command="dotnet $(DllFilePath) %(MsSqlCommands.Identity)" />
    <Exec Command="dotnet $(DllFilePath) %(MySqlCommands.Identity)" />
    <Exec Command="dotnet $(DllFilePath) %(PostgreSqlCommands.Identity)" />
    <Exec Command="dotnet $(DllFilePath) %(CosmosCommands.Identity)" />

    <Copy SourceFiles="@(ConfigFiles)"  DestinationFolder="$(BaseOutputPath)\tests\$(TargetFramework)\" />

  </Target>

</Project>
