{
  "$schema": "../../../schemas/dab.draft-01.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "Server=localhost;Database=DAB_GettingStarted;User ID=dab_test_user;Password=DAB_Pas$w0rD!;TrustServerCertificate=true"
  },
  "runtime": {
    "rest": {
      "path": "/api"
    },
    "graphql": {
      "path": "/graphql"
    },
    "host": {
      "mode": "development",
      "authenticate-devmode-requests": false,
      "cors": {
        "origins": [],
        "allow-credentials": false
      }
    }
  },
  "entities": {
    "book": {
      "source": "dbo.books",
      "rest": {
        "path": "books"
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "read",
              "fields": {
                "include": [
                  "id"
                ]
              }
            }
          ]
        },
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "read",
              "fields": {
                "include": [
                  "id",
                  "title",
                  "series_id"
                ]
              }
            }
          ]
        },
        {
          "role": "author",
          "actions": [
            "*"
          ]
        }
      ],
      "relationships": {
        "series": {
          "cardinality": "one",
          "target.entity": "series",
          "source.fields": [
            "series_id"
          ],
          "target.fields": [
            "id"
          ]
        }
      }
    },
    "series": {
      "source": "dbo.series",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "relationships": {
        "books": {
          "cardinality": "many",
          "target.entity": "book"
        }
      }
    }
  }
}
